<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
         
         <!-- Loginn for the passenger -->
         
         
        <servlet>
			<servlet-name>login</servlet-name>
			<servlet-class>com.bus.LoginServlet</servlet-class>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>login</servlet-name>
			<url-pattern>/login</url-pattern>
		</servlet-mapping>
		
		
		<!-- Login for the Bus owner login -->
		
		
		<servlet>
			<servlet-name>BusOwnerlogin</servlet-name>
			<servlet-class>com.bus.BusOwnerServlet</servlet-class>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>BusOwnerlogin</servlet-name>
			<url-pattern>/BusOwnerlogin</url-pattern>
		</servlet-mapping>
         
         
         <!-- Registration for passenger -->
         
		<servlet>
    		<servlet-name>insert</servlet-name>
    		<servlet-class>com.bus.passengerInsert</servlet-class>
		</servlet>
		
		
		 <!-- Update for passenger -->
		
		
		<servlet-mapping>
    		<servlet-name>insert</servlet-name>
    		<url-pattern>/in</url-pattern>
		</servlet-mapping>
		
		<servlet>
			<servlet-name>updatePassenger</servlet-name>
			<servlet-class>com.bus.UpdatePassengerServlet</servlet-class>
		</servlet>
		
		<servlet-mapping>
			<servlet-name>updatePassenger</servlet-name>
			<url-pattern>/updatePass</url-pattern>
		</servlet-mapping>
		
		
		 <!-- Registration for bus owner -->
		
		
		<servlet>
    		<servlet-name>insertBusOwner</servlet-name>
    		<servlet-class>com.bus.busOwnerInsert</servlet-class>
		</servlet>

		<servlet-mapping>
    		<servlet-name>insertBusOwner</servlet-name>
    		<url-pattern>/inBusOwner</url-pattern>
		</servlet-mapping>
		
		
		 <!-- Add a credit card -->
		
		
		<servlet>
    		<servlet-name>AddCard</servlet-name>
    		<servlet-class>com.bus.AddCardServlet</servlet-class>
		</servlet>

		<servlet-mapping>
    		<servlet-name>AddCard</servlet-name>
    		<url-pattern>/AddCard</url-pattern>
		</servlet-mapping>
		
		
		 <!-- delete passenger account-->
		
		
		<servlet>
    		<servlet-name>deletePassenger</servlet-name>
    		<servlet-class>com.bus.DeletePassengerServlet</servlet-class>
		</servlet>

		<servlet-mapping>
    		<servlet-name>deletePassenger</servlet-name>
    		<url-pattern>/deletePassenger</url-pattern>
		</servlet-mapping>         
</web-app>
         
         